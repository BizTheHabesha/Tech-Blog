<div class="container-fluid">
	{{#if error}}
		<div class="alert alert-danger">{{error}}</div>
	{{else}}
		<article class="blog-post">
			<h2 class="blog-post-title">{{title}}</h2>
			<p class="blog-post-meta">{{date}}</p>
			<p>{{{body}}}</p>
			<hr />
			<a href="/delete/{{id}}" class="btn btn-danger">Delete</a>
		</article>

	{{/if}}
</div>