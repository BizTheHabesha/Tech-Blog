<div class="container">
	<div class="row">
		<div class="col">
			<div class="text-center">
				<button type="button" class="btn btn-primary">
					<a href="/newpost/" class="text-decoration-none link-light">
						Post something new...
					</a>
				</button>
			</div>
		</div>
	</div>
	{{#if error}}
		<div class="row">
			<div class="col">
				<div class="alert alert-danger" role="alert">
					{{error}}
				</div>
			</div>
		</div>
	{{/if}}
	<div class="row">
		<div class="col">
			<div class="container-fluid">
				<h3> My Posts: </h3>
			</div>
		</div>
	</div>
	{{#if posts.length}}
		{{#each posts as |post|}}
			<div class="row pb-2">
				<div class="col">
					<div class="card">
						<div class="card-body">
							<h4><a
									href="/post/{{post.id}}"
								>{{post.title}}</a></h4>
							<p>
								{{post.body}}
							</p>
						</div>
						<div class="card-footer">
							<button
								type="button"
								class="btn btn-danger delete-post-btn"
								data-id="{{post.id}}"
							>
								Delete
							</button>
						</div>
					</div>
				</div>
			</div>
		{{/each}}
	{{else}}
		<div class="row">
			<div class="col">
				<div class="alert alert-info" role="alert">
					No posts yet.
				</div>
			</div>
		</div>
	{{/if}}
</div>
<script src="/js/deletepost.js"></script>