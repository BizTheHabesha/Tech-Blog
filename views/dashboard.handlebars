<div class="row">
	<div class="col-md-6">
		<div class="text-center">
			<button type="button" class="btn btn-primary">Post something new...</button>
		</div>
		{{#if posts.length}}
			<div class="col-md-6 project-list">
				<h3>My Posts:</h3>

				{{#each posts as |post|}}
					<div class="row mb-2">
						<div class="col-md-8">
							<h4><a
									href="/post/{{post.id}}"
								>{{post.title}}</a></h4>
						</div>
						<div class="col-md-4">
							<button
								class="btn btn-sm btn-danger delete-post-btn"
								data-id="{{post.id}}"
							>DELETE</button>
						</div>
					</div>
				{{/each}}
			</div>
			<script src="../public/js/deletepost.js"></script>
		{{else}}
			<div class="col-md-6 project-list">
				<h3>My Posts:</h3>
				<p>No posts yet.</p>
			</div>
		{{/if}}

	</div>
</div>